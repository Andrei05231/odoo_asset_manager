<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!--       LIST VIEW       -->
    <record id="view_assets_phone_list" model="ir.ui.view">
        <field name="name">assets.phone.list</field>
        <field name="model">assets_phone</field>
        <field name="arch" type="xml">
            <list string="Phones / Tablets">
                <field name="name"/>
                <field name="device_type"/>
                <field name="model"/>
                <field name="phone_number"/>
                <field name="user_id"/>
                <field name="department_id"/>
                <field name="company_id"/>
                <field name="serial"/>
            </list>
        </field>
    </record>

    <!--       FORM VIEW       -->
    <record id="view_assets_phone_form" model="ir.ui.view">
        <field name="name">assets.phone.form</field>
        <field name="model">assets_phone</field>
        <field name="arch" type="xml">
            <form string="Phone / Tablet">
                <sheet>

                    <!-- BASIC INFORMATION -->
                    <group>
                        <field name="name"/>
                        <field name="device_type"/>
                        <field name="model"/>
                        <field name="serial"/>
                        <field name="phone_number"/>
                    </group>

                    <!-- ASSIGNMENT -->
                    <group string="Assignment">
                        <field name="user_id"/>
                        <field name="department_id" readonly="1"/>
                        <field name="project_id"/>
                        <field name="company_id" readonly="1"/>
                    </group>

                    <!-- INVENTORY (from mixin) -->
                    <group>
                        <field name="asset_status" invisible="not project_id"/>
                    </group>

                    <!-- INVENTORY CODE + BUTTON -->
                    <group>
                        <label for="inventory_code"/>
                        <div class="o_row">
                            <field name="inventory_code" readonly="1" class="oe_inline"/>
                            <button name="action_generate_inventory_number"
                                    type="object"
                                    string="Generate"
                                    invisible="inventory_code"
                                    class="btn-primary oe_inline"/>
                        </div>
                    </group>

                    <!-- DETAILS -->
                    <group>
                        <field name="details"/>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <!--       ACTION       -->
    <record id="action_assets_phone" model="ir.actions.act_window">
        <field name="name">Phones / Tablets</field>
        <field name="res_model">assets_phone</field>
        <field name="view_mode">list,form</field>
    </record>

    <!--       MENU       -->
    <menuitem id="menu_assets_phone"
              name="Phones / Tablets"
              parent="menu_assets_devices"
              action="action_assets_phone"/>

</odoo>
