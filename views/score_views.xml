<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- LIST VIEW -->
    <record id="view_assets_component_score_list" model="ir.ui.view">
        <field name="name">assets.component.score.list</field>
        <field name="model">assets_component_score</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="component_type"/>
                <field name="score"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_assets_component_score_form" model="ir.ui.view">
        <field name="name">assets.component.score.form</field>
        <field name="model">assets_component_score</field>
        <field name="arch" type="xml">
            <form string="Component Score">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="component_type"/>
                        <field name="score"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_assets_component_score" model="ir.actions.act_window">
        <field name="name">Component Scores</field>
        <field name="res_model">assets_component_score</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- MENU ITEM -->
    <menuitem
        id="menu_assets_component_score"
        name="Component Scores"
        parent="menu_assets_config"
        action="action_assets_component_score"
    />

</odoo>
