<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!--       LIST VIEW       -->

    <record id="view_assets_other_list" model="ir.ui.view">
        <field name="name">assets.other.list</field>
        <field name="model">assets_other</field>
        <field name="arch" type="xml">
            <list string="Other Assets">
                <field name="name"/>
                <field name="company_id"/>
                <field name="inventory"/>
                <field name="serial"/>
            </list>
        </field>
    </record>

    <!--       FORM VIEW       -->
    <record id="view_assets_other_form" model="ir.ui.view">
        <field name="name">assets.other.form</field>
        <field name="model">assets_other</field>
        <field name="arch" type="xml">
            <form string="Other Asset">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="inventory"/>
                        <field name="serial"/>
                        <field name="project_id"/>
                        <field name="company_id" readonly="1"/>
                        <field name="details"/>
                        <field name="asset_status" invisible="not project_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--   ACTION + MENU       -->
    <record id="action_assets_other" model="ir.actions.act_window">
        <field name="name">Other Assets</field>
        <field name="res_model">assets_other</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_assets_other"
              name="Other"
              parent="menu_assets_devices"
              action="action_assets_other"/>

</odoo>
