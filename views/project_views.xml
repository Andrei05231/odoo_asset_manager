<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- LIST VIEW -->
    <record id="asset_project_list" model="ir.ui.view">
        <field name="name">assets.project.list</field>
        <field name="model">assets_project</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="company_id"/>
                <field name="finance_type"/>
                <field name="date"/>
            </list>
        </field>
    </record>


    <!-- FORM VIEW -->
    <record id="asset_project_form" model="ir.ui.view">
        <field name="name">assets.project.form</field>
        <field name="model">assets_project</field>
        <field name="arch" type="xml">
            <form string="Project">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="company_id"/>
                        <field name="finance_type"/>
                        <field name="date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <!-- ACTION -->
    <record id="asset_project_action" model="ir.actions.act_window">
        <field name="name">Projects</field>
        <field name="res_model">assets_project</field>
        <field name="view_mode">list,form</field>
    </record>


    <!-- MENU -->
    <menuitem id="menu_asset_project"
              name="Projects"
              parent="menu_assets_financial"
              action="asset_project_action"/>

</odoo>
