<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <!--Action-->
    <record id="asset_license_action" model="ir.actions.act_window">
        <field name="name">License</field>
        <field name="res_model">assets_license</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Form View: Show all fields -->
    <record id="asset_license_form" model="ir.ui.view">
        <field name="name">assets.license.form</field>
        <field name="model">assets_license</field>
        <field name="arch" type="xml">
            <form string="License">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="software_id"/>
                        <field name="license_type"/>
                        <field name="licence_key" invisible="license_type != 'key'" />
                        <field name="licence_linked_acount" invisible="license_type != 'account'" />
                        <field name="licence_server" invisible="license_type != 'server'" />
                        <field name="inventory_number"/>
                        <field name="notes"/>
                        <field name="computer_id"/>
                        <field name="user_id"/>
                        <field name="finance_project_id"/>
                        <field name="company_id"/>
                         <field name="inventory_code" readonly="1" class="oe_inline"/>
                        <button name="action_generate_inventory_number"
                                            type="object"
                                            string="Generate"
                                            invisible="inventory_code"
                                            class="btn-primary oe_inline"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View: Show only key fields -->
    <record id="asset_license_list" model="ir.ui.view">
        <field name="name">assets.license.list</field>
        <field name="model">assets_license</field>
        <field name="arch" type="xml">
            <list string="Licenses">
                <field name="name"/>
                <field name="software_id"/>
                <field name="license_type"/>
                <field name="computer_id"/>
                <field name="user_id"/>
            </list>
        </field>
    </record>

  <record id="action_get_inventory_number" model="ir.actions.server">
        <field name="name">Generate inventory number </field>
        <field name="model_id" ref="model_assets_computer"/>
        <field name="binding_model_id" ref="model_assets_computer"/>
        <field name="state">code</field>
        <field name="code"><![CDATA[
        action = records.action_generate_inventory_number()
action
        ]]></field>
    </record>

    <!--Menu-->
    <menuitem id="menu_assets_license" 
        name="Licenses"
        parent="menu_assets_software" 
        action="asset_license_action"/>

</odoo>
