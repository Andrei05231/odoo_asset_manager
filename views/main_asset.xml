<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- List View -->
    <record id="view_asset_item_list" model="ir.ui.view">
        <field name="name">asset.item.list</field>
        <field name="model">asset.item</field>
        <field name="arch" type="xml">
            <list string="Assets">
                <field name="name"/>
                <field name="asset_ref"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_asset_item_form" model="ir.ui.view">
        <field name="name">asset.item.form</field>
        <field name="model">asset.item</field>
        <field name="arch" type="xml">
            <form string="Asset">
                <sheet>
                    <group>
                        <field name="asset_ref"/>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>




    <!-- Action -->
    <record id="action_asset_item" model="ir.actions.act_window">
        <field name="name">Assets</field>
        <field name="res_model">asset.item</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->

    <menuitem id="menu_asset_items"
              name="All Assets"
              parent="menu_assets_root"
              action="action_asset_item"
              sequence="10"/>

</odoo>

