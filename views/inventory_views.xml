
<odoo>

    <!-- Kanban View -->
<record id="view_asset_inventory_number_kanban" model="ir.ui.view">
    <field name="name">asset.inventory.number.kanban</field>
    <field name="model">asset.inventory.number</field>
    <field name="arch" type="xml">
        <kanban class="o_kanban_mobile" sample="1">
            <field name="number"/>
            <field name="code"/>
            <field name="date"/>
            <field name="asset_type"/> <field name="asset_ref"/>
            <templates>
                <t t-name="card">
                    <div class=" d-flex flex-column p-3">
                        <div class="o_kanban_record_top mb-2">
                            <strong class="o_kanban_record_title fs-4 text-primary">
                                <field name="code"/>
                            </strong>
                        </div>

                        <div class="text-muted small mb-3">
                            <i class="fa fa-building me-1"/> <field name="company_id"/>
                        </div>

                        <div class="o_kanban_record_bottom d-flex justify-content-between align-items-center border-top pt-2">
                            <div class="d-flex flex-column">
                                <div class="d-flex align-items-center">
                                    <span class="badge rounded-pill border mas-auto me-1">
                                        <field name="asset_type"/>
                                    </span>
                                </div>
                                <span class="text-muted small fw-bold">
                                    <field name="asset_ref"/>
                                </span>
                            </div>
                            <div class="text-end">
                                <span class="d-block text-dark fw-bold">
                                        <t t-if="record.date.raw_value">
                                        <t t-set="date_obj" t-value="luxon.DateTime.fromISO(record.date.raw_value)"/>
                                        <t t-out="date_obj.toFormat('yyyy MMM')"/>
                                    </t>
                                </span>
                                <i class="fa fa-calendar-o text-muted small"/>
                            </div>
                        </div>
                    </div>
                </t>
            </templates>
        </kanban>
    </field>
</record>

    <!-- List View -->
    <record id="view_asset_inventory_number_list" model="ir.ui.view">
        <field name="name">asset.inventory.number.list</field>
        <field name="model">asset.inventory.number</field>
        <field name="arch" type="xml">
            <list string="Asset Inventory Numbers">
                <field name="company_id"/>
                <field name="number"/>
                <field name="code"/>
                <field name="date"/>
                <field name="asset_ref"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_asset_inventory_number_form" model="ir.ui.view">
        <field name="name">asset.inventory.number.form</field>
        <field name="model">asset.inventory.number</field>
        <field name="arch" type="xml">
            <form string="Asset Inventory Number">
                <sheet>
                    <group>
                        <field name="company_id"/>
                        <field name="number"/>
                        <field name="date"/>
                        <field name="code" readonly="1"/>
                        <field name="asset_ref"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View (safe for all users, sidebar filters included) -->
    
<record id="view_asset_inventory_number_search" model="ir.ui.view">
    <field name="name">asset.inventory.number.search</field>
    <field name="model">asset.inventory.number</field>
    <field name="arch" type="xml">
        <search string="Inventory Search">
            <field name="number"/>
            <field name="code"/>

            <searchpanel>
                <field name="company_id" string="Company" icon="fa-building"/>
                <field name="asset_type" string="Type" icon="fa-laptop"/>
            </searchpanel>
        </search>
    </field>
</record>

    <!-- Action -->
    <record id="action_asset_inventory_number" model="ir.actions.act_window">
        <field name="name">Asset Inventory Numbers</field>
        <field name="res_model">asset.inventory.number</field>
        <field name="view_mode">kanban,form,list</field>
        <field name="search_view_id" ref="view_asset_inventory_number_search"/>
    </record>

    <!-- Menu -->
    <menuitem
        id="menu_asset_inventory_numbers"
        name="Inventory Numbers"
        parent="menu_assets_config"
        action="action_asset_inventory_number"/>

</odoo>

