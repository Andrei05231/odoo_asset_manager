<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- List View -->
    <record id="view_assets_tag_list" model="ir.ui.view">
        <field name="name">assets.tag.list</field>
        <field name="model">assets_tag</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="color" widget="color_picker"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_assets_tag_form" model="ir.ui.view">
        <field name="name">assets.tag.form</field>
        <field name="model">assets_tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="color" widget="color_picker"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <!-- Action -->
    <record id="action_assets_tag" model="ir.actions.act_window">
        <field name="name">Asset Tags</field>
        <field name="res_model">assets_tag</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem
        id="menu_assets_tag"
        name="Asset Tags"
        parent="menu_assets_config"
        action="action_assets_tag"
        sequence="50"
    />

</odoo>
