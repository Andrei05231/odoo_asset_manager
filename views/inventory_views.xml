<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Kanban View -->
    <record id="view_asset_inventory_number_kanban" model="ir.ui.view">
        <field name="name">asset.inventory.number.kanban</field>
        <field name="model">asset.inventory.number</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <!-- Optional: fields you want preâ€‘loaded -->
                <field name="number"/>
                <field name="code"/>
                <field name="date"/>
                <field name="company_id"/>

                <!-- The required QWeb templates block -->
                <templates>
                    <t t-name="card">
                        <!-- Card HTML / QWeb -->
                        <div class="o_kanban_record">
                            <strong><field name="number"/></strong><br/>
                            <span>Code: <field name="code"/></span><br/>
                            <span>Date: <field name="date"/></span><br/>
                            <span>Company: <field name="company_id"/></span>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <!-- List View -->
    <record id="view_asset_inventory_number_list" model="ir.ui.view">
        <field name="name">asset.inventory.number.list</field>
        <field name="model">asset.inventory.number</field>
        <field name="arch" type="xml">
            <list string="Asset Inventory Numbers">
                <field name="company_id"/>
                <field name="number"/>
                <field name="code"/>
                <field name="date"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_asset_inventory_number_form" model="ir.ui.view">
        <field name="name">asset.inventory.number.form</field>
        <field name="model">asset.inventory.number</field>
        <field name="arch" type="xml">
            <form string="Asset Inventory Number">
                <sheet>
                    <group>
                        <field name="company_id"/>
                        <field name="number"/>
                        <field name="date"/>
                        <field name="code" readonly="1"/>
                        <field name="asset_ref"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_asset_inventory_number_search" model="ir.ui.view">
        <field name="name">asset.inventory.number.search</field>
        <field name="model">asset.inventory.number</field>
        <field name="arch" type="xml">
            <search>
                <!-- Fields searchable in the top search bar -->
                <field name="company_id"/>
                <field name="number"/>
                <field name="code"/>
                <field name="date"/>

                <!-- Predefined filter -->
                <filter name="recent" string="Recent" domain="[('date','>=',context_today())]"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_asset_inventory_number" model="ir.actions.act_window">
        <field name="name">Asset Inventory Numbers</field>
        <field name="res_model">asset.inventory.number</field>
        <field name="view_mode">kanban,form,list</field>
        <field name="search_view_id" ref="view_asset_inventory_number_search"/>
    </record>

    <!-- Menu -->
    <menuitem
        id="menu_asset_inventory_numbers"
        name="Inventory Numbers"
        parent="menu_assets_config"
        action="action_asset_inventory_number"/>

</odoo>

