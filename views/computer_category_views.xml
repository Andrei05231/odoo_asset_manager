<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- List View -->
    <record id="view_assets_score_category_list" model="ir.ui.view">
        <field name="name">assets.computer.category.list</field>
        <field name="model">assets_score_category</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="cpu_weight"/>
                <field name="gpu_weight"/>
                <field name="ram_weight"/>
                <field name="max_cpu_score"/>
                <field name="max_gpu_score"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_assets_score_category_form" model="ir.ui.view">
        <field name="name">assets.computer.category.form</field>
        <field name="model">assets_score_category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>

                    <group string="Weights" col="2">
                        <field name="cpu_weight"/>
                        <field name="gpu_weight"/>
                        <field name="ram_weight"/>
                    </group>

                    <group string="Maximum Scores" col="2">
                        <field name="max_cpu_score"/>
                        <field name="max_gpu_score"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_assets_score_category" model="ir.actions.act_window">
        <field name="name">Computer Categories</field>
        <field name="res_model">assets_score_category</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem
        id="menu_assets_score_category"
        name="Computer Categories"
        parent="menu_assets_config"
        action="action_assets_score_category"
        sequence="50"
    />

</odoo>
