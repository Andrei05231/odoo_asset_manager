
<odoo>

    <!-- Kanban View -->
<record id="view_asset_inventory_number_kanban" model="ir.ui.view">
    <field name="name">asset.inventory.number.kanban</field> <field name="model">asset.inventory.number</field>
    <field name="arch" type="xml">
        <kanban class="o_kanban_mobile" sample="1">
            <field name="code"/>
            <field name="date"/>
            <field name="company_id"/>
            <field name="asset_ref"/>
            <field name="asset_type"/>
            <field name="number"/>
            
            <templates>
<t t-name="card">
    <div t-attf-class="oe_kanban_global_click o_kanban_record d-flex flex-column p-3 mb-2 shadow-sm rounded-3 bg-white border-0">
        
        <div class="d-flex justify-content-between align-items-start mb-2">
            <div class="d-flex flex-column">
                <strong class="o_kanban_record_title fs-5 text-primary mb-1">
                    <field name="code"/>
                </strong>
                <div class="text-muted small">
                    <i class="fa fa-building-o me-1 text-primary"/>
                    <field name="company_id"/>
                </div>
            </div>
            <div class="text-end">
                 <span class="badge bg-light text-dark border-0 small fw-normal">
                    <i class="fa fa-calendar-o me-1 text-muted"/>
                    <t t-if="record.date.raw_value">
                        <t t-set="date_obj" t-value="luxon.DateTime.fromISO(record.date.raw_value)"/>
                        <t t-out="date_obj.toFormat('MMM yyyy')"/>
                    </t>
                </span>
            </div>
        </div>

        <div class="mb-3 mt-2">
            <div class="d-flex align-items-center mb-1">
                <span class="text-uppercase text-muted" style="font-size: 0.65rem; font-weight: 700; letter-spacing: 0.05rem;">Asset Reference</span>
            </div>
            <div class="text-dark fw-medium border-start border-primary border-3 ps-2">
                <field name="asset_ref"/>
            </div>
        </div>

        <div class="o_kanban_record_bottom d-flex justify-content-between align-items-center pt-2 mt-auto border-top">
            <div class="oe_kanban_bottom_left">
                <span class="badge rounded-pill bg-primary-light text-primary border border-primary-light px-2 py-1">
                    <field name="asset_type"/>
                </span>
            </div>
            <div class="oe_kanban_bottom_right">
                <field name="number" widget="badge" decoration-info="1"/>
            </div>
        </div>
    </div>
</t>
            </templates>
        </kanban>
    </field>
    </record>

    <!-- List View -->
    <record id="view_asset_inventory_number_list" model="ir.ui.view">
        <field name="name">asset.inventory.number.list</field>
        <field name="model">asset.inventory.number</field>
        <field name="arch" type="xml">
            <list string="Asset Inventory Numbers">
                <field name="company_id"/>
                <field name="number"/>
                <field name="code"/>
                <field name="date"/>
                <field name="asset_ref"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_asset_inventory_number_form" model="ir.ui.view">
        <field name="name">asset.inventory.number.form</field>
        <field name="model">asset.inventory.number</field>
        <field name="arch" type="xml">
            <form string="Asset Inventory Number">
                <sheet>
                    <group>
                        <field name="company_id"/>
                        <field name="number"/>
                        <field name="date"/>
                        <field name="code" readonly="1"/>
                        <field name="asset_ref"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View (safe for all users, sidebar filters included) -->
    
<record id="view_asset_inventory_number_search" model="ir.ui.view">
    <field name="name">asset.inventory.number.search</field>
    <field name="model">asset.inventory.number</field>
    <field name="arch" type="xml">
        <search string="Inventory Search">
            <field name="number"/>
            <field name="code"/>

            <searchpanel>
                <field name="company_id" string="Company" icon="fa-building"/>
                <field name="asset_type" string="Type" icon="fa-laptop"/>
            </searchpanel>
        </search>
    </field>
</record>

    <!-- Action -->
    <record id="action_asset_inventory_number" model="ir.actions.act_window">
        <field name="name">Asset Inventory Numbers</field>
        <field name="res_model">asset.inventory.number</field>
        <field name="view_mode">kanban,form,list</field>
        <field name="search_view_id" ref="view_asset_inventory_number_search"/>
    </record>

    <!-- Menu -->
    <menuitem
        id="menu_asset_inventory_numbers"
        name="Inventory Numbers"
        parent="menu_assets_config"
        action="action_asset_inventory_number"/>

</odoo>

